<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">

<div class="container">
  <h2>My tasks</h2>
  <ul class="tasks list-unstyled mt-3"><% @tasks.each do |task| %>
    <li>
      <div class=task>
        <p><% if task.completed? %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= task.title %>
      </div>
    </li>
  <% end %>
  </ul>
</div>