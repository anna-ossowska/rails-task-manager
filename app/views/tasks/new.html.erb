<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">

<div class="container">
  <h2>New task</h2>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <strong><%= f.label :title %></strong>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <strong><%= f.label :details %></strong>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="input"><%= f.submit class: 'btn btn-primary' %></div>
  <% end %>
    <div class="back-link mt-4">
      <span><%= link_to "Back to list", tasks_path %></span>
    </div>
</div>


